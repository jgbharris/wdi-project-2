<div class="jumbotron">
</div>

<h1 id="pageTitle">Edit</h1>

<form method="POST" action="/events/<%= event.id %>" enctype="multipart/form-data">
  <input type="hidden" name="_method" value="PUT" >

  <input type="hidden" name="lat" id="lat" value="<%= event.lat %>">
  <input type="hidden" name="lng" id="lng" value="<%= event.lng %>">


  <div class="col-6 offset-3">
    <label for="image">Upload image</label>
    <input type="file" name="image" id="image">
  </div>

  <div class="col-6 offset-3">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= event.name %>" required>
  </div>

  <div class="col-6 offset-3">
    <label for="location">Location</label>
    <input class=" autocomplete" type="text" name="location" id="locationform" value="<%= event.location %>" required>
  </div>

  <div class="col-6 offset-3">
    <label for="date">Date</label>
    <input type="text" name="date" id="date" value="<%= event.date %>" required>
  </div>

  <div class="col-6 offset-3">
    <label for="description">Description</label>
    <input type="text" name="description" id="description" value="<%= event.description %>" required>
  </div>

  <section id="location">
    <div class="container">
      <div class="row">
        <div class="col-sm-10 offset-sm-1">
          <h2>Location</h2>
          <div id="map" data-lat="<%= event.lat %>" data-lng="<%= event.lng %>"></div>
        </div>
      </div>
    </div>
  </section>

  <div id="formfield" class="col-6 offset-3">
      <button id="createButton" class="btn-primary">Edit</button>
  </div>

</div>
</form>
</div>
