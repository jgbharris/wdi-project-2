<form method="GET">
  <label>Search by name</label>
  <input type="text" name="q" placeholder="Search">
</form>




<% events.forEach((event) => { %>
  <div class="large-4 columns">
    <a href="/events/<%= event.id %>">
      <h2><%= event.name %></h2>
      <p>
        <%= event.location %><br>
        <%= event.date %><br>
        <%= event.description %>
    <h3>Created By: </h3>
    <p><%= event.createdBy.username %></p>
  </div>
<% }) %>
