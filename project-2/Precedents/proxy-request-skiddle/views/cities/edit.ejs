<h1>Edit <%= city.name %></h1>

<form action="/cities/<%= city.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
    <label for="name">Name</label>
    <input class="form-control" type="text" name="name" value="<%= city.name %>">
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    <input class="form-control" type="text" name="image" value="<%= city.image %>">
  </div>

  <div class="form-group">
    <label for="country">Country</label>
    <input class="form-control" type="text" name="country" value="<%= city.country %>">
  </div>

  <div class="form-group">
    <label for="population">Population</label>
    <input class="form-control" type="text" name="population" value="<%= city.population %>">
  </div>

  <button class="btn btn-success">Update City!</button>
</form>
